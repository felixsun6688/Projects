@{
    ViewBag.Title = "Menu - Restaurant";
}

@model AorangiPeak.Dto.MenuDto.NewMenuDto

<div class="container" style="overflow:hidden">
    <div class="row">
        <div class="col-lg-12">
            <ul class="breadcrumb">
                <li>Restaurant<span class="divider"></span></li>
                <li>
                    @Html.ActionLink("Menu","Index")<span class="divider"></span>
                </li>
                <li>New Menu</li>
            </ul>
        </div>
    </div>
    @using (Html.BeginForm("AddMenu", "Meal", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="row">
            <div class="col-lg-8">
                <div class="form-group">
                    @Html.TextBoxFor(model => model.Menuname, new { @Class = "form-control", placeholder = "Menu title...", style = "height:40px", required = "required", autofocus = "autofocus" })
                </div>
                <div class="form-group">
                    @Html.TextAreaFor(model => model.Introduction, new { @class = "form-control", style = "height:150px", placeholder = "Introduction..." })
                </div>
                <div class="form-group">
                    @Html.TextAreaFor(model => model.Content, new { @class = "form-control", id = "menuContent",placeholder = "Content...", @row = 5 })
                </div>
                <div class="form-group">
                    <a href="javascript:void(0);" class="btn btn_addPic">
                        Upload Image 1<i style="margin-left:6px" class="glyphicon glyphicon-folder-open"></i>
                        <input type="file" tabindex="3"  size="3" name="files" class="filePrew"  id="FistImg" />
                    </a>
                </div>
                <div class="form-group">
                    <a href="javascript:void(0);" class="btn btn_addPic">
                        Upload Image 2<i style="margin-left:6px" class="glyphicon glyphicon-folder-open"></i>
                        <input type="file" tabindex="3" size="3" name="files" class="filePrew" id="SecondImg" />
                    </a>
                </div>
                </div>
            <div class="col-lg-4">
                <input type="submit" class="btn btn-success submit" value="Save" style="min-width:400px;" />
                <input type="button" class="btn btn-warning submit" value="Publish" style="min-width:400px;margin-top:15px" />
                <input type="button" class="btn btn-default submit" value="Cancel" style="min-width:400px;margin-top:15px" />
            </div>
        </div>
     }    
</div>

<script>
    $(document).ready(function () {
        $('#restaurant_header').addClass("active");
        $('#restaruant').removeClass("collapse").addClass("collapsed");
        $('#menu').addClass("active");
    });
</script>

